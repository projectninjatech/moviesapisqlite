<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Media Actions</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

        h1 {
            text-align: center;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .container {
            display: flex;
            flex-direction: column;
            width: 80%;
            max-width: 600px;
            margin-top: 20px;
        }

        .row {
            display: flex;
            width: 100%;
            margin-bottom: 10px;
        }

        .column {
            flex: 1;
            border: 1px solid #ccc;
            padding: 20px;
            text-align: center;
        }

        .column:not(:last-child) {
            border-right: none;
        }

        .button {
        flex: 1;
        margin: 0 10px;
        padding: 15px;
        color: #fff;
        text-decoration: none;
        text-align: center;
        font-weight: bold;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    a {
        cursor: pointer;
        text-decoration: none;
    }
    </style>
</head>

<body>
    <div class="container">
        <h1>Manage Posters</h1>
        <!-- First Row for Movie -->
        <div class="row">
            <div class="column">
                <a class="button" style="background-color: #28a745;" href="#" onclick="downloadMoviePosters(event)">Download Movie Poster</a>
            </div>
            <div class="column">
                <a class="button" style="background-color: #dc3545;" href="#" onclick="deleteMoviePosters(event)">Delete Movie Poster</a>
            </div>
        </div>
        <!-- Second Row for TV Show -->
        <div class="row">
            <div class="column">
                <a class="button" style="background-color: #28a745;" href="#" onclick="downloadTVShowPosters(event)">Download TV Show Poster</a>
            </div>
            <div class="column">
                <a class="button" style="background-color: #dc3545;" href="#" onclick="deleteTVShowPosters(event)">Delete TV Show Poster</a>
            </div>
        </div>
    </div>


    <script>
        async function downloadMoviePosters(event) {
            event.preventDefault();
            try {
                const response = await fetch('/download-movies-posters', {
                    method: 'GET'
                });
                const data = await response.json();
                if (data.success) {
                    alert('Movie Posters downloaded and URLs updated successfully');
                } else {
                    alert('Failed to download movie posters');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while downloading movie posters');
            }
        }

        async function downloadTVShowPosters(event) {
            event.preventDefault();
            try {
                const response = await fetch('/download-shows-posters', {
                    method: 'GET'
                });
                const data = await response.json();
                if (data.success) {
                    alert('TV Show Posters downloaded and URLs updated successfully');
                } else {
                    alert('Failed to download TV show posters');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while downloading TV show posters');
            }
        }

        async function deleteMoviePosters(event) {
            event.preventDefault();
            try {
                const response = await fetch('/delete-movies-posters', {
                    method: 'GET'
                });
                const data = await response.json();
                if (data.success) {
                    alert('Movie Posters deleted from directory and URLs updated successfully');
                } else {
                    alert('Failed to delete Movie posters');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting Movie posters');
            }
        }

        async function deleteTVShowPosters(event) {
            event.preventDefault();
            try {
                const response = await fetch('/delete-shows-and-episodes-posters', {
                    method: 'GET'
                });
                const data = await response.json();
                if (data.success) {
                    alert('TV Show Posters deleted from directory and URLs updated successfully');
                } else {
                    alert('Failed to delete TV show posters');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting TV show posters');
            }
        }
    </script>
</body>

</html>